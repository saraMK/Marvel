<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="170dp"
    android:layout_height="240dp"
 >

    <ImageView
        android:id="@+id/hero_banner_img"
        android:layout_width="0dp"
        android:layout_height="200dp"

        android:layout_marginEnd="10dp"
        android:scaleType="fitXY"
        android:src="@drawable/image_not_available"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/hero_name_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:lines="2"
        android:layout_marginStart="10dp"
        android:text="Absorbing Man"
        android:textColor="@color/white"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/hero_banner_img"
        app:layout_constraintStart_toStartOf="@id/hero_banner_img"
        app:layout_constraintTop_toBottomOf="@id/hero_banner_img" />
</android.support.constraint.ConstraintLayout>
